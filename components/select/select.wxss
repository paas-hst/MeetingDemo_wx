.select-box {
  position: relative;
  width: 100%;
  font-size: 30rpx;
}

.select-current {
  position: relative;
  width: 100%;
  padding: 0 10rpx;
  line-height: 5vh;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  box-sizing: border-box;
}

.select-current::after {
  position: absolute;
  display: block;
  right: 16rpx;
  top: 30rpx;
  content: '';
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top: 10rpx solid #999;
}

.current-name {
  display: block;
  width: 15vw;
  height: 100%;
  word-break: break-all;
  word-wrap: none;
  overflow: hidden;
  text-overflow: ellipsis; 
  white-space: nowrap
}

.option-list {
  position: absolute;
  left: 0;
  bottom: 76rpx;
  width: 100%;
  padding: 12rpx 20rpx 10rpx 20rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
  z-index: 99;
  box-shadow: 0rpx 0rpx 1rpx 1rpx rgba(0, 0, 0, 0.2) inset;
  background-color: #fff;
}

.option {
  display: block;
  width: 100%;
  line-height: 5vh;
  border-bottom: 1rpx solid #eee;
  overflow: hidden;
  text-overflow: ellipsis; 
  white-space: nowrap
}

.option:last-child {
  border-bottom: none;
  padding-bottom: 0;
}