.grid6.videoview {
  background-repeat: no-repeat;
  background-size: cover;
  /* padding-left: 3.5vw; */
  width: 100%;
  height: 100%;
  position: absolute;
}

.grid6 .pusher-box {
  position: relative;
  display: inline-block;
  overflow: hidden;
  width: 50vw;
  height: 30.67vh;
  text-align: center;
  /* margin-bottom: 2vw; */
  border: 1px solid white;
  box-sizing:border-box;
  vertical-align: top;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-image: url("https://resource-paas.hst.com/camera_bg_square.png")
}

.grid6 live-pusher {
  width: 100%;
  height: 100%;
}

.grid6 .player-box {
  position: relative;
  display: inline-block;
  overflow: hidden;
  width: 50vw;
  height: 30.67vh;
  text-align: center;
  /* margin-bottom: 2vw; */
  border: 1px solid white;
  box-sizing:border-box;
  vertical-align: top;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-image: url("https://resource-paas.hst.com/camera_bg_square.png")
}

