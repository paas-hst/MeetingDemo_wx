.grid6 .poster {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #dee6ee;
  opacity: 0.55;
}

.grid6 .set {
  position: absolute;
  width: 80rpx;
  height: 90rpx;
  top: 50%;
  left: 50%;
  margin: -28px 0 0 -16px;
}

.grid6 live-player {
  width: 100%;
  height: 100%;
}

.grid6 .character {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 16px;
  color: #999;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  text-align: left;
}

.grid6 .loading {
  position: absolute;
  width: 100%;
  height: 100%;
}

.grid6 .loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}
