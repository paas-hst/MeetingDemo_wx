.float.videoview {
  background-repeat: no-repeat;
  background-size: cover;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row-reverse;
}
live-pusher {
  z-index: 100;
}
.float .pusher-box {
  position: absolute;
  display: flex;
  overflow: hidden;
  border-left: 1px solid white;
  border-bottom: 1px solid white;
  width: 35.65vw;
  height: 30.67vh;

  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-image: url("https://resource-paas.hst.com/camera_bg.png")
}

.float live-pusher {
  position: relative;
  display: inline-block;
}

.float .player-box {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 92vh;
  text-align: center;
  vertical-align: top;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-image: url("https://resource-paas.hst.com/camera_bg.png")
}

.float .player-box .player-item {
  width: 100%;
  height: 100%;
}

.float live-player {
  width: 100%;
  height: 100%;
}

.float .character {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 16px;
  color: #999;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  text-align: left;
}

.float .loading {
  position: absolute;
  width: 100%;
  height: 100%;
}

.float .loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}
