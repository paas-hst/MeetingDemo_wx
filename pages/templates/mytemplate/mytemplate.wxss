.mine.videoview {
  background-repeat: no-repeat;
  background-size: cover;
  /* padding-left: 3.5vw; */
  width: 100%;
  height: 100%;
  position: absolute;
}

.mine .pusher-box {
  position: relative;
  display: inline-block;
  overflow: hidden;
  width: 50vw;
  height: 30.67vh;
  text-align: center;
  /* margin-bottom: 2vw; */
  vertical-align: top;
}

.mine live-pusher {
  width: 100%;
  height: 100%;
}

.mine .player-box {
  position: relative;
  display: inline-block;
  overflow: hidden;
  width: 50vw;
  height: 30.67vh;
  text-align: center;
  /* margin-bottom: 2vw; */
  vertical-align: top;
}

