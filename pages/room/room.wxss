.container-box {
  height: 100vh;
  /* margin-bottom: 100rpx; */
}

.btn-group {
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 8vh;
  width: 100%;
  box-shadow: 0px -4rpx 20rpx 0rpx rgba(0, 0, 0, 0.1);
}

.btn-group .section {
  position: relative;
  width: 125rpx;
  height: 8vh;
}

.btn-group .section:first-child {
  margin-left: 140rpx;
}

.btn-group .section:last-child {
  margin-right: 140rpx;
}

.btn-group .section.active {
  background-color: #6a7dfe;
  box-shadow: 0px 10px 20px 0px rgba(36, 49, 218, 0.3);
  /* background-image: url("data:image/png;base64,");
  background-repeat: repeat;
  background-position: center; */
}

.btn-group .section.active text {
  color: #ffffff;
}

.btn-group image {
  position: absolute;
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  left: 50%;
  top: 45%;
  transform: translate(-50%, -50%);
}

.btn-group text {
  position: absolute;
  display: inline-block;
  widows: 100%;
  font-size: 14rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(86, 86, 86, 1);
  left: 50%;
  bottom: -3%;
  transform: translate(-50%, -50%);
  white-space: nowrap;
}

.online-item {
  position: relative;
  display: flex;
  border-bottom: 1px solid #dadada;
  justify-content: space-between;
  padding-left: 5px;
  padding-right: 15px;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  margin-top: 5px;
}

input {
  width: 70vw;
  height: 5vh;
  border-radius: 5rpx;
  margin-left: 1vw;
  padding: 0 3vw;
  font-size: 28rpx;
  background: white;
  opacity: 0.5;
  border: 1px solid rgb(135,135,135)
}

.right-msg {
  font-size: 30rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  border-radius: 10rpx;
  z-index: 10;
  margin-right: 2vw;
  max-width: 70vw;
  word-wrap: break-word;
}

.board-title {
  height:6vh; 
  width:100%; 
  background-color:white; 
  display:flex; 
  justify-content: space-between; 
  align-items: center; 
  border-bottom: 1px solid rgb(235,235,235);
  font-size: 30rpx
}

.board-name {
  width: 50vw; 
  word-break: break-all; 
  overflow: hidden; 
  text-overflow: ellipsis; 
  white-space: nowrap
}

.board-content {
  width:100vw; 
  height:80vh; 
  background-color:black
}

.board-footer {
  height:6vh; 
  width:100%; 
  background-color:white; 
  display: flex; 
  justify-content: center; 
  align-items: center; 
  border-top: 1px solid rgb(235,235,235)
}

.board-footer-text {
  font-size: 30rpx; 
  margin: 0 auto
}

.board-name {
  font-size: 30rpx; 
  padding-left:4px
}

.board-switch {
  margin-left:2px; 
  margin-right:2px; 
  height:4vh; 
  font-size: 20rpx;
  line-height: 4vh;
}

.group-user-scroll {
  height:300px; 
  width: 640rpx; 
  margin: 0px auto; 
  padding-top: 20px
}

.group-user-icon {
  height:24px; 
  width:24px
}

.group-user-media {
  height:24px; 
  width:24px; 
  margin:0 1px 0 1px
}

.msg-scroll {
  height:84vh; 
  background-color:rgba(235, 238, 242, 1)
}

.left-msg-view {
  display: flex; 
  padding: 2vw 11vw 2vw 2vw;
}

.left-msg-image {
  width: 11vw; 
  height: 11vw; 
  border-radius: 10rpx;
}

.left-msg-content {
  font-size: 30rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: 2vw;
  border-radius: 10rpx;
  z-index: 10;
  max-width: 70vw;
  word-wrap: break-word;
}

.right-msg-view {
  display: flex; 
  justify-content: flex-end; 
  padding: 2vw 2vw 2vw 11vw;
}

.right-msg-image {
  width: 11vw; 
  height: 11vw; 
  border-radius: 10rpx;
}

.send-msg-btn {
  height:5vh; 
  line-height:5vh; 
  font-size:30rpx; 
  width:20vw; 
  margin-left: 5px;
  margin-right: 5px;
  background: rgba(106, 125, 254, 1); 
  color:white
}

.send-msg {
  width: 100vw;
  height: 8vh;
  border-top: 1px solid #cdcdcd;
  border-bottom: 1px solid #cdcdcd;
  background-color: white;
  /* position: fixed; */
  display: flex;
  align-items: center;
  z-index: 20;
  box-sizing: border-box
}

.mode-select {
  margin: 0 10rpx;
  background-color: white;
  border: 1px solid rgb(235,235,235);
  border-radius: 5px;
  position: relative;
  font-size: 20rpx; 
  width: 50px;
}


.mode-select .select-text {
  /* height: 60rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
  /* padding: 0rpx; */
  height: 4vh; 
  line-height: 4vh;
}

.select-box {
  background-color: #eee;
  padding: 0 10rpx;
  width: 82%;
  position: absolute;
  /* top: 130rpx; */
  z-index: 1;
  overflow: hidden;
  animation: myfirst 0.5s;
}

.select-item {
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #ccc;
}

.chat-select-wrapper {
  width: 30vw; 
  margin-left: 5px; 
  word-wrap: none; 
}