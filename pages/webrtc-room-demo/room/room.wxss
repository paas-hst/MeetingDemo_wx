.container-box {
  height: 100vh;
  /* margin-bottom: 100rpx; */
}

.camera-box {
  margin-bottom: 4vh;
}

.btn-group {
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 8vh;
  width: 100%;
  box-shadow: 0px -4rpx 20rpx 0rpx rgba(0, 0, 0, 0.1);
}

.btn-group .section {
  position: relative;
  width: 125rpx;
  height: 8vh;
}

.btn-group .section:first-child {
  margin-left: 195rpx;
}

.btn-group .section:last-child {
  margin-right: 195rpx;
}

.btn-group .section.active {
  background-color: #6a7dfe;
  box-shadow: 0px 10px 20px 0px rgba(36, 49, 218, 0.3);
  /* background-image: url("data:image/png;base64,");
  background-repeat: repeat;
  background-position: center; */
}

.btn-group .section.active text {
  color: #ffffff;
}

.btn-group image {
  position: absolute;
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  left: 50%;
  top: 45%;
  transform: translate(-50%, -50%);
}

.btn-group text {
  position: absolute;
  display: inline-block;
  widows: 100%;
  font-size: 14rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(86, 86, 86, 1);
  left: 50%;
  bottom: -3%;
  transform: translate(-50%, -50%);
  white-space: nowrap;
}
